<h1>{{this.data.title}}</h1>
{{#each this.data.products}}
    <div>
        {{!-- se crea una especie de ambito en donde this pasa a el elemento del array (una especie de map) --}}
        <h2>{{this.nombre}}</h2>
        <div><b>Precio:</b> ${{this.precio}}</div>
        <div><b>Quedan:</b>{{this.stock}} unidades disponibles</div>
        <a href="/product/detail/{{this.id}}"> Ir a detalle</a>
        <hr>
    </div>
{{/each}}

